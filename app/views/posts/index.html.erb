<p id="notice"><%= notice %></p>

<%= @user_id %>
<%= @user %>
<%= @user.meta %>
<%= @user.meta.id %>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Need</th>
      <th>Need type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>

            <td><%= link_to 'Show', post %></td>
          <% if @user.meta.id == post.organization_id && @user.meta_type == 'Organization'%>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @user[:meta_type] == "Organization" %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
